package kr.co.fmos.customer;

import java.util.List;
import java.util.Map;

import org.apache.ibatis.session.SqlSession;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Repository;

@Repository
public class InquiryDAO {

	public InquiryDAO() {
		System.out.println("-----ProductDAO()객체 생성됨");
	}//end
	
	@Autowired
	SqlSession sqlSession;
	
	public int inquireInsert(InquiryDTO dto) {
		return sqlSession.insert("customer.noticeinsert", dto);
	}//insert() end
	
	public List<InquiryDTO> oneselect(int inquiry_kind) {
		return sqlSession.selectList("customer.oneselect", inquiry_kind);
	}// movieList() end
	
	public List<InquiryDTO> lostselect(int inquiry_kind) {
		return sqlSession.selectList("customer.lostselect", inquiry_kind);
	}// movieList() end
	
	public int oneInquiryins(InquiryDTO dto) {
		return sqlSession.insert("customer.oneinquiryins", dto);
	}
	
}//class end